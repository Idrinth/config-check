{
    "verbosity": 2,
    "blacklist": ["/vendor", "/test"],
    "xml": {
        "validity": true
    },
    "ini": {
        "validity": false
    },
    "json": {
        "validity": true,
        "mapping": {
            ".idrinth-cc.json": "cwd://src/schema.json",
            "composer.json": "https://getcomposer.org/schema.json"
        },
        "blacklist": ["broken.json"],
        "additional-extensions": ["lock"]
    },
    "yaml": {
        "validity": true,
        "mapping": {
            ".travis.yml": "https://raw.githubusercontent.com/travis-ci/travis-yml/master/schema.json"
        },
        "additional-extensions": ["yml", "neon"]
    }
}
